		changer_do
		setconfig $DIR/database n4 "16" MEGS
		setconfig $DIR/settings.cfg Option4b "-> 16" LIST2
		showNotify "Info:" "Valor cambiado" 1 1 &
	fi
elif [ $RADIOS -eq 3 ]
